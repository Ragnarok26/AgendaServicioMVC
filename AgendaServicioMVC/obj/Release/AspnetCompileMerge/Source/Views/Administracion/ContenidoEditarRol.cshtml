@model AgendaServicio.Entities.Common.Rol

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading" style="text-align:center;">
            @if (Model == null)
            {
                @Html.Label("lblTitle", "Nuevo Rol", new { @class = "form-horizontal" })
            }
            else
            {
                @Html.Label("lblTitle", "Rol: ", new { @class = "form-horizontal" })
                @Html.Label("lblName", Model.Name, new { @class = "form-horizontal" })
            }
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="form form-group">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <p>
                                    @Html.Label("lblName", "Nombre", new { @class = "control-label" })
                                    @Html.TextBox("txtName", Model == null ? "" : Model.Name, new { @class = "form-control" })
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12" style="margin-bottom:2%">
                                <p>
                                    <button id="btnRolSave" value="@(Model == null ? "0" : Model.Id.ToString())" class="btn btn-success" style="float:right;">Guardar</button>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>