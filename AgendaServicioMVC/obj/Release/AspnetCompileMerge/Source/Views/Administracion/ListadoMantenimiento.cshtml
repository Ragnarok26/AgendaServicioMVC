@model IEnumerable<AgendaServicio.Entities.Common.Mantenimiento>

@{
    <style>
        th {
            text-align: center;
            background-color: #f9f9f9 !important;
            color: black;
            padding-top: 10px !important;
            padding-bottom: 2px !important;
        }

        .tdRowspan {
            background-color: #ffffff !important;
        }
    </style>
}
<br />
@if (Model != null)
{
    if (Model.Count() > 0)
    {
        <div class="export">
            <input type="button" id="xlsExport" class="btn btn-primary" value="Exportar a Excel" />
        </div>
    }
}
<br />
<br />
<div class="table-responsive">
    <table class="table table-condensed table-striped table-sm" style="font-size:8pt;" id="tb_Listado">
        <thead>
            <tr>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.FileM)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.FechaCompra)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.IdCliente)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.Cliente)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.Modelo)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.Estado)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.Ciudad)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.NoSerie)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.NumOrden)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.FechaPuestaMarcha)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.FechaSugerida)
                        </b>
                    </p>
                </th>
                <th>
                    <p>
                        <b>
                            @Html.DisplayNameFor(model => model.TiempoTranscurrido)
                        </b>
                    </p>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                <tr>
                    <td colspan="13" align="center">
                        Información No Disponible...
                    </td>
                </tr>
            }
            else
            {
                if (Model.Count() <= 0)
                {
                    <tr>
                        <td colspan="13" align="center">
                            Información No Disponible...
                        </td>
                    </tr>
                }
                else
                {
                    foreach (AgendaServicio.Entities.Common.Mantenimiento item in Model)
                    {
                        <tr>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.FileM
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.FechaCompra.ToString("dd/MM/yyyy")
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.IdCliente
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.Cliente
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.Cantidad.ToString("#")
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.Modelo
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.Estado
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.Ciudad
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @item.NoSerie
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @(item.NumOrden.HasValue ? item.NumOrden.Value.ToString("#0") : "No Aplica")
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @(item.FechaPuestaMarcha.HasValue ? item.FechaPuestaMarcha.Value.ToString("dd/MM/yyyy hh:mm tt", System.Globalization.CultureInfo.InvariantCulture) : "No Aplica")
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @(item.FechaSugerida.HasValue ? item.FechaSugerida.Value.ToString("dd/MM/yyyy hh:mm tt", System.Globalization.CultureInfo.InvariantCulture) : "No Aplica")
                                </p>
                            </td>
                            <td class="tdRowspan htCellVerticalCenter" align="center">
                                <p>
                                    @(item.TiempoTranscurrido.HasValue ? item.TiempoTranscurrido.Value.ToString("#0") : "No Aplica")
                                </p>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>